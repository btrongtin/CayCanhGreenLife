@model CayCanhOnline.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>THÊM SỰ KIỆN</h2>

@using (Html.BeginForm("Create", "SuKien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tiêu đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTieuDe" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô Tả:</label>
            <div class="col-md-10">
                <textarea name="sMoTa"></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đăng:</label>

            <div class="col-md-10">
                <input type="date" name="dNgayDang" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày bắt đầu:</label>

            <div class="col-md-10">
                <input type="date" name="dNgayBatDau" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày kết thúc:</label>

            <div class="col-md-10">
                <input type="date" name="dNgayKetThuc" required />
            </div>
        </div>

        


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SỰ KIỆN", "Index")
</div>
