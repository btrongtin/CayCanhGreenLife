@model CayCanhOnline.Models.SUKIEN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN SỰ KIỆN</h2>

@using (Html.BeginForm("Edit", "SuKien", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã sự kiện:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="iMaSK" value="@Model.MaSK" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tiêu đề:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTieuDe" value="@Model.TieuDe" required />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mô tả:</label>
            <div class="col-md-10">
                <textarea name="sMoTa"><p>@Model.MoTa.Replace("\n", "</p><p>")</p></textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ảnh bìa:</label>
            <div class="col-md-10">
                <input type="file" name=" fFileUpload" />
                <img src="~/Images/@Model.AnhBia" width="120">(Ảnh hiện tại)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày đăng:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgayDang" required value="@Convert.ToDateTime(Model.NgayDang)" />
            </div>
        </div>

        
        <div class="form-group">
            <label class="control-label col-md-2">Ngày bắt đầu:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgayBatDau" required value="@Convert.ToDateTime(Model.NgayBatDau)" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Ngày kết thúc:</label>
            <div class="col-md-10">
                <input type="datetime" name="dNgayKetThuc" required value="@Convert.ToDateTime(Model.NgayKetThuc)" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU THÔNG TIN" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("vỀ TRANG QUẢN LÝ SỰ KIỆN", "Index")
</div>
