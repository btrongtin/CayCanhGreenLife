@model CayCanhOnline.Models.SUKIEN

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    img {
        width: 200px;
        margin-bottom: 20px;
    }

    h3, h4 {
        color: red;
        font-weight: bold;
    }
</style>
<h2>XÁC NHẬN THÔNG TIN CẦN XÓA</h2>

<h3>Bạn quyết định xóa sự kiện này?</h3>
<h4>@Html.Raw(ViewBag.ThongBao)</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt>
            Mô Tả:
        </dt>

        <dd>
            @Html.Raw(Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="~/Images/@Model.AnhBia" alt="@Model.TieuDe" />
        </dd>

        <dt>
            Ngày đăng:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayDang, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày bắt đầu:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayBatDau, "{0:dd/MM/yyyy}")
        </dd>

        <dt>
            Ngày kết thúc:
        </dt>

        <dd>
            @Html.FormatValue(@Model.NgayKetThuc, "{0:dd/MM/yyyy}")
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class=" form-actions no-color">
            <input type="submit" value="XÓA" class="btn btn-success" /> |
            @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẢM", "Index")
        </div>

    }
</div>
