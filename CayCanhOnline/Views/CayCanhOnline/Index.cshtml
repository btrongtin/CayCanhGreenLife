@model IEnumerable<CayCanhOnline.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!--Slider-->
<div class="container section-title">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Images/slider_1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/slider_1.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/Images/slider_1.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<!--END Slider-->
<!--Group card sale-->
<div class="container section-title">
   
    @Html.Action("SuKien", "CayCanhOnline")

</div>

<!--New product-->
<div class="container section-title">
    <h2>Sản phẩm mới<span></span></h2>
    <div class="row">
        @foreach (var sanpham in Model)
        {
            <div class="col-md-15">
                <div class="card">
                    <img class="card-img-top" src="~/Images/@sanpham.AnhBia" alt="Card image cap">
                    <div class="card-body">
                        <p class="card-text prod-name"><a href="@Url.Action("ChiTietSanPham", "CayCanhOnline", new {id = sanpham.MaSP})">@sanpham.TenSP</a></p>
                        <p class="card-text prod-price">@Html.FormatValue(sanpham.GiaBan, "{0:#,###}")đ</p>
                        <div class="center">
                            @*<button type="button" class="btn btn-success mx-auto d-block"><i class="fas fa-cart-plus"></i> Add to cart</button>*@
                            <a href="@Url.Action("ThemGioHang", "GioHang", new {msp = @sanpham.MaSP, url = Request.Url.ToString()})" class="btn btn-success mx-auto d-block" role="button">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
       

    </div>
</div>

<!--Big banner-->
<div class="container section-title ">
    <div class="row">
        <div class="col-md-5 big-banner-left">
            <div class="big-banner-title">
                <span class="big-banner-title-main">Top Cây Cảnh</span>
                <span class="big-banner-title-sub">hợp phong thủy</span>
            </div>
            <div class="big-banner-description">Hãy đi tìm loài cây mang lại tài lộc, may mắn cho gia chủ trong năm 2019</div>
        </div>
        <div class="col-md-7">
            <img src="~/Images/big-banner.jpg" alt="" class="img-100">
        </div>
    </div>
</div>

<!--Tieu canh de ban-->
<div class="container section-title">
    
    @Html.Action("TieuCanhDeBanPartial", "CayCanhOnline")


</div>

<!--Danh muc noi bat-->
<div class="container section-title">
    
    @Html.Action("DanhMucPartial", "CayCanhOnline")

    
</div>

