@model CayCanhOnline.Models.KHACHHANG
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutUserDetail.cshtml";
}

<style type="text/css">
    tr {
        height: 40px;
    }
</style>

<h4 style="color: red; text-align: center;">@ViewBag.ThongBao</h4>
<table align="center"  style="margin-left:auto; margin-right:auto;">

    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm("DangKy", "User"))
    {
        @Html.ValidationSummary(false)

        <tr>
            <td>Họ tên:</td>
            <td>
                @Html.TextBox("HoTen")
            @Html.ValidationMessageFor(mode => mode.HoTen, "(*)", new { @class = "text-danger" })
        </td>
    </tr>
        <tr>
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TaiKhoan")
                @Html.ValidationMessageFor(model => model.TaiKhoan, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("MatKhau")
                @Html.ValidationMessageFor(model => model.MatKhau, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Mật khẩu nhập lại:</td>
            <td>@Html.Password("MatKhauNL") @ViewData["err4"]</td>
        </tr>
        <tr>
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @Html.ValidationMessageFor(model => model.Email, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("DienThoai")
                @Html.ValidationMessageFor(model => model.DienThoai, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Ngày sinh:</td>
            <td>
                <input type="date" name="NgaySinh" />
                @Html.ValidationMessageFor(model => model.NgaySinh, "(*)", new { @class = "text-danger" })
            </td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td><input type="text" name="DiaChi" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Đăng ký" /><input type="reset" value="Xóa thông tin" /></td>
        </tr>
    }
</table>




